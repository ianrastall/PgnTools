<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="PgnTools.ShellPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:PgnTools"
    xmlns:models="using:PgnTools.Models"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="48"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Custom Title Bar -->
        <Grid x:Name="AppTitleBar" 
              Grid.Row="0" 
              Background="{StaticResource AccentLightBrushLow}"
              VerticalAlignment="Stretch">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <StackPanel Grid.Column="0" 
                        Orientation="Horizontal" 
                        Spacing="12"
                        Margin="16,0,0,0"
                        VerticalAlignment="Center">
                <FontIcon Glyph="{StaticResource IconApp}" 
                          FontSize="20"
                          Foreground="{StaticResource PrimaryBrush}"/>
                <TextBlock Text="PGN Tools" 
                           Style="{StaticResource SubtitleTextBlockStyle}"
                           VerticalAlignment="Center"/>
            </StackPanel>
        </Grid>

        <!-- Navigation View -->
        <NavigationView x:Name="NavView"
                        Grid.Row="1"
                        IsBackButtonVisible="Collapsed"
                        IsSettingsVisible="True"
                        IsPaneToggleButtonVisible="True"
                        PaneDisplayMode="Left"
                        OpenPaneLength="280"
                        SelectionChanged="NavView_SelectionChanged"
                        ItemInvoked="NavView_ItemInvoked">

            <NavigationView.MenuItems>
                <NavigationViewItem Tag="CategoryTagger" Content="Category Tagger">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="{StaticResource IconTag}"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>

                <NavigationViewItem Tag="ChessAnalyzer" Content="Chess Analyzer">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="{StaticResource IconAnalyze}"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>

                <NavigationViewItem Tag="ChessComDownloader" Content="Chess.com">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="{StaticResource IconDownload}"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>

                <NavigationViewItem Tag="RemoveDoubles" Content="Deduplicator">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="{StaticResource IconDeduplicate}"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>

                <NavigationViewItem Tag="EcoTagger" Content="ECO Tagger">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="{StaticResource IconTag}"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>

                <NavigationViewItem Tag="EloAdder" Content="Elo Adder">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="{StaticResource IconElo}"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>

                <NavigationViewItem Tag="Filter" Content="Filter">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="{StaticResource IconApp}"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>

                <NavigationViewItem Tag="Lc0Downloader" Content="Lc0">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="{StaticResource IconDownload}"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>

                <NavigationViewItem Tag="LichessDownloader" Content="Lichess">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="{StaticResource IconDownload}"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>

                <NavigationViewItem Tag="PgnJoiner" Content="Merger">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="{StaticResource IconMerge}"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>

                <NavigationViewItem Tag="PgnInfo" Content="PGN Info">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="{StaticResource IconInfo}"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>

                <NavigationViewItem Tag="PgnMentorDownloader" Content="PGN Mentor">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="{StaticResource IconDownload}"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>

                <NavigationViewItem Tag="PlyCountAdder" Content="Ply Count Adder">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="{StaticResource IconPly}"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>

                <NavigationViewItem Tag="PgnSorter" Content="Sorter">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="{StaticResource IconSort}"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>

                <NavigationViewItem Tag="PgnSplitter" Content="Splitter">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="{StaticResource IconSplit}"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>

                <NavigationViewItem Tag="StockfishNormalizer" Content="Stockfish Normalizer">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="{StaticResource IconNormalize}"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>

                <NavigationViewItem Tag="Tablebases" Content="Tablebases">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="{StaticResource IconDownload}"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>

                <NavigationViewItem Tag="TourBreaker" Content="Tour Breaker">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="{StaticResource IconTour}"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>

                <NavigationViewItem Tag="TwicDownloader" Content="TWIC Downloader">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="{StaticResource IconDownload}"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>

            </NavigationView.MenuItems>

            <Frame x:Name="ContentFrame" Padding="24"/>
        </NavigationView>
    </Grid>
</Page>
