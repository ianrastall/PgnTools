<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="PgnTools.Views.WelcomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Padding="48">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="24">
            <FontIcon Glyph="&#xE7C1;" 
                      FontSize="96"
                      Foreground="{StaticResource PrimaryBrush}"
                      HorizontalAlignment="Center"/>
            
            <TextBlock Text="Welcome to PGN Tools" 
                       Style="{StaticResource TitleTextBlockStyle}"
                       HorizontalAlignment="Center"/>
            
            <TextBlock Text="A comprehensive suite of utilities for managing chess PGN files."
                       Style="{StaticResource SubtitleTextBlockStyle}"
                       HorizontalAlignment="Center"
                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
            
            <TextBlock Text="Select a tool from the navigation menu to get started."
                       Style="{StaticResource BodyTextBlockStyle}"
                       HorizontalAlignment="Center"
                       Margin="0,24,0,0"/>

            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Center" 
                        Spacing="48"
                        Margin="0,48,0,0">
                
                <StackPanel Spacing="8" HorizontalAlignment="Center">
                    <FontIcon Glyph="&#xE8A4;" FontSize="32" Foreground="{StaticResource PrimaryBrush}"/>
                    <TextBlock Text="File Tools" Style="{StaticResource BodyStrongTextBlockStyle}" HorizontalAlignment="Center"/>
                    <TextBlock Text="Join, split, sort, dedupe" 
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                               HorizontalAlignment="Center"/>
                </StackPanel>
                
                <StackPanel Spacing="8" HorizontalAlignment="Center">
                    <FontIcon Glyph="&#xE9D9;" FontSize="32" Foreground="{StaticResource PrimaryBrush}"/>
                    <TextBlock Text="Analysis" Style="{StaticResource BodyStrongTextBlockStyle}" HorizontalAlignment="Center"/>
                    <TextBlock Text="Engine analysis, stats" 
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                               HorizontalAlignment="Center"/>
                </StackPanel>
                
                <StackPanel Spacing="8" HorizontalAlignment="Center">
                    <FontIcon Glyph="&#xE8D3;" FontSize="32" Foreground="{StaticResource PrimaryBrush}"/>
                    <TextBlock Text="Enrichment" Style="{StaticResource BodyStrongTextBlockStyle}" HorizontalAlignment="Center"/>
                    <TextBlock Text="Add Elos, ply counts" 
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                               HorizontalAlignment="Center"/>
                </StackPanel>
                
                <StackPanel Spacing="8" HorizontalAlignment="Center">
                    <FontIcon Glyph="&#xE896;" FontSize="32" Foreground="{StaticResource PrimaryBrush}"/>
                    <TextBlock Text="Downloaders" Style="{StaticResource BodyStrongTextBlockStyle}" HorizontalAlignment="Center"/>
                    <TextBlock Text="TWIC, Chess.com, Lichess" 
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
