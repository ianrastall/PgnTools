<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="PgnTools.Views.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:controls="using:PgnTools.Views.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Padding="0,0,0,24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Spacing="8" Margin="0,0,0,24">
            <TextBlock Text="Settings" Style="{StaticResource TitleTextBlockStyle}"/>
            <TextBlock Text="Personalize appearance and default paths."
                       Style="{StaticResource BodyTextBlockStyle}"
                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                       TextWrapping="Wrap"/>
        </StackPanel>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Spacing="20">
                <StackPanel Spacing="10">
                    <TextBlock Text="Appearance"
                               Style="{StaticResource SubtitleTextBlockStyle}"/>
                    <TextBlock Text="Accent color"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    <ComboBox ItemsSource="{x:Bind ViewModel.AccentOptions}"
                              SelectedItem="{x:Bind ViewModel.SelectedAccent, Mode=TwoWay}"
                              DisplayMemberPath="DisplayName"/>
                </StackPanel>

                <StackPanel Spacing="10">
                    <TextBlock Text="Paths"
                               Style="{StaticResource SubtitleTextBlockStyle}"/>

                    <TextBlock Text="Tablebases folder"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBox Grid.Column="0"
                                 PlaceholderText="Select tablebases folder..."
                                 Text="{x:Bind ViewModel.TablebasesFolder, Mode=TwoWay}"
                                 IsReadOnly="True"
                                 Margin="0,0,12,0"/>

                        <Button Grid.Column="1"
                                Content="Browse..."
                                Command="{x:Bind ViewModel.SelectTablebasesFolderCommand}"
                                Style="{StaticResource Action}"
                                Margin="0,0,8,0"/>

                        <Button Grid.Column="2"
                                Content="Clear"
                                Command="{x:Bind ViewModel.ClearTablebasesFolderCommand}"
                                Style="{StaticResource Action}"/>
                    </Grid>

                    <TextBlock Text="Default download folder"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBox Grid.Column="0"
                                 PlaceholderText="Select download folder..."
                                 Text="{x:Bind ViewModel.DefaultDownloadFolder, Mode=TwoWay}"
                                 IsReadOnly="True"
                                 Margin="0,0,12,0"/>

                        <Button Grid.Column="1"
                                Content="Browse..."
                                Command="{x:Bind ViewModel.SelectDownloadFolderCommand}"
                                Style="{StaticResource Action}"
                                Margin="0,0,8,0"/>

                        <Button Grid.Column="2"
                                Content="Clear"
                                Command="{x:Bind ViewModel.ClearDownloadFolderCommand}"
                                Style="{StaticResource Action}"/>
                    </Grid>
                </StackPanel>

                <controls:ToolStatusBar StatusMessage="{x:Bind ViewModel.StatusMessage, Mode=OneWay}"
                                        StatusSeverity="{x:Bind ViewModel.StatusSeverity, Mode=OneWay}"
                                        StatusDetail="{x:Bind ViewModel.StatusDetail, Mode=OneWay}"
                                        IsRunning="False"
                                        IsIndeterminate="False"
                                        ProgressValue="0"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
