<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="PgnTools.Views.Tools.LichessToolsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:controls="using:PgnTools.Views.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" NavigationCacheMode="Disabled">

    <Grid Padding="0,0,0,24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Spacing="8" Margin="0,0,0,16">
            <TextBlock Text="Lichess" Style="{StaticResource TitleTextBlockStyle}"/>
            <TextBlock Text="Lichess tools for user game downloads and monthly database filtering."
                       Style="{StaticResource BodyTextBlockStyle}"
                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                       TextWrapping="Wrap"/>
        </StackPanel>

        <Pivot Grid.Row="1">
            <PivotItem Header="User Games">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Spacing="12" Padding="0,8,0,0">
                        <TextBlock Text="Download a user's games from the Lichess public API."
                                   Style="{StaticResource BodyTextBlockStyle}"
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                   TextWrapping="Wrap"/>

                        <TextBlock Text="Username"
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        <TextBox PlaceholderText="e.g. lichessUser"
                                 Text="{x:Bind ViewModel.UserDownloader.Username, Mode=TwoWay}"/>

                        <TextBlock Text="Max Games (optional)"
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        <TextBox PlaceholderText="Leave blank for all"
                                 Text="{x:Bind ViewModel.UserDownloader.MaxGames, Mode=TwoWay}"/>

                        <TextBlock Text="Output File"
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBox Grid.Column="0"
                                     PlaceholderText="Select output PGN..."
                                     Text="{x:Bind ViewModel.UserDownloader.OutputFilePath, Mode=OneWay}"
                                     IsReadOnly="True"
                                     Margin="0,0,12,0"/>

                            <Button Grid.Column="1"
                                    Content="Browse..."
                                    Command="{x:Bind ViewModel.UserDownloader.SelectOutputFileCommand}"
                                    Style="{StaticResource Action}"/>
                        </Grid>

                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <Button Content="Download"
                                    Command="{x:Bind ViewModel.UserDownloader.DownloadCommand}"
                                    Style="{StaticResource PrimaryAction}"/>

                            <Button Content="Cancel"
                                    Command="{x:Bind ViewModel.UserDownloader.CancelCommand}"
                                    Style="{StaticResource Action}"
                                    IsEnabled="{x:Bind ViewModel.UserDownloader.IsRunning, Mode=OneWay}"/>
                        </StackPanel>

                        <controls:ToolStatusBar StatusMessage="{x:Bind ViewModel.UserDownloader.StatusMessage, Mode=OneWay}"
                                                StatusSeverity="{x:Bind ViewModel.UserDownloader.StatusSeverity, Mode=OneWay}"
                                                StatusDetail="{x:Bind ViewModel.UserDownloader.StatusDetail, Mode=OneWay}"
                                                IsRunning="{x:Bind ViewModel.UserDownloader.IsRunning, Mode=OneWay}"
                                                IsIndeterminate="True"/>
                    </StackPanel>
                </ScrollViewer>
            </PivotItem>

            <PivotItem Header="Monthly Database">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Spacing="12" Padding="0,8,0,0">
                        <TextBlock Text="Stream a monthly Lichess archive and filter by minimum Elo without unpacking to disk."
                                   Style="{StaticResource BodyTextBlockStyle}"
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                   TextWrapping="Wrap"/>

                        <TextBlock Text="Monthly Archive"
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        <ComboBox ItemsSource="{x:Bind ViewModel.DatabaseDownloader.AvailableArchives}"
                                  SelectedItem="{x:Bind ViewModel.DatabaseDownloader.SelectedArchive, Mode=TwoWay}"
                                  HorizontalAlignment="Stretch"/>

                        <TextBlock Text="Minimum Elo (white or black)"
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        <NumberBox Width="200"
                                   Minimum="0"
                                   SmallChange="50"
                                   SpinButtonPlacementMode="Inline"
                                   Value="{x:Bind ViewModel.DatabaseDownloader.MinElo, Mode=TwoWay}"/>

                        <TextBlock Text="Filters"
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        <CheckBox Content="Exclude bullet games"
                                  IsChecked="{x:Bind ViewModel.DatabaseDownloader.ExcludeBullet, Mode=TwoWay}"/>
                        <CheckBox Content="Exclude non-standard variants"
                                  IsChecked="{x:Bind ViewModel.DatabaseDownloader.ExcludeNonStandard, Mode=TwoWay}"/>
                        <CheckBox Content="Only checkmates"
                                  IsChecked="{x:Bind ViewModel.DatabaseDownloader.OnlyCheckmates, Mode=TwoWay}"/>

                        <TextBlock Text="Output File"
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBox Grid.Column="0"
                                     PlaceholderText="Select output PGN..."
                                     Text="{x:Bind ViewModel.DatabaseDownloader.OutputFilePath, Mode=OneWay}"
                                     IsReadOnly="True"
                                     Margin="0,0,12,0"/>

                            <Button Grid.Column="1"
                                    Content="Browse..."
                                    Command="{x:Bind ViewModel.DatabaseDownloader.BrowseOutputCommand}"
                                    Style="{StaticResource Action}"/>
                        </Grid>

                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <Button Content="Start Extraction"
                                    Command="{x:Bind ViewModel.DatabaseDownloader.StartCommand}"
                                    Style="{StaticResource PrimaryAction}"/>

                            <Button Content="Cancel"
                                    Command="{x:Bind ViewModel.DatabaseDownloader.CancelCommand}"
                                    Style="{StaticResource Action}"
                                    IsEnabled="{x:Bind ViewModel.DatabaseDownloader.IsRunning, Mode=OneWay}"/>
                        </StackPanel>

                        <controls:ToolStatusBar StatusMessage="{x:Bind ViewModel.DatabaseDownloader.StatusMessage, Mode=OneWay}"
                                                StatusSeverity="{x:Bind ViewModel.DatabaseDownloader.StatusSeverity, Mode=OneWay}"
                                                StatusDetail="{x:Bind ViewModel.DatabaseDownloader.StatusDetail, Mode=OneWay}"
                                                IsRunning="{x:Bind ViewModel.DatabaseDownloader.IsRunning, Mode=OneWay}"
                                                IsIndeterminate="{x:Bind ViewModel.DatabaseDownloader.IsIndeterminate, Mode=OneWay}"
                                                ProgressValue="{x:Bind ViewModel.DatabaseDownloader.ProgressValue, Mode=OneWay}"
                                                ProgressMaximum="{x:Bind ViewModel.DatabaseDownloader.ProgressMaximum, Mode=OneWay}"/>
                    </StackPanel>
                </ScrollViewer>
            </PivotItem>
        </Pivot>
    </Grid>
</Page>
