<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="PgnTools.Views.PlaceholderPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Padding="48">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="24">
            <FontIcon Glyph="&#xE8F1;" 
                      FontSize="64"
                      Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                      HorizontalAlignment="Center"/>
            
            <TextBlock Text="Coming Soon" 
                       Style="{StaticResource TitleTextBlockStyle}"
                       HorizontalAlignment="Center"/>
            
            <TextBlock Text="This tool is currently being migrated from the CLI version."
                       Style="{StaticResource BodyTextBlockStyle}"
                       HorizontalAlignment="Center"
                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
        </StackPanel>
    </Grid>
</Page>
