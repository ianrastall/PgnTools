<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="PgnTools.Views.Controls.ToolStatusBar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <InfoBar IsOpen="True"
             IsClosable="False"
             Message="{x:Bind StatusMessage, Mode=OneWay}"
             Severity="{x:Bind StatusSeverity, Mode=OneWay}">
        <InfoBar.Content>
            <StackPanel Spacing="6">
                <TextBlock Text="{x:Bind StatusDetail, Mode=OneWay}"
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                           TextWrapping="Wrap"
                           Visibility="{x:Bind StatusDetail, Mode=OneWay, Converter={StaticResource StringToVisibilityConverter}}"/>
                <ProgressBar Minimum="0"
                             Maximum="{x:Bind ProgressMaximum, Mode=OneWay}"
                             Value="{x:Bind ProgressValue, Mode=OneWay}"
                             IsIndeterminate="{x:Bind IsIndeterminate, Mode=OneWay}"
                             Visibility="{x:Bind IsRunning, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"/>
            </StackPanel>
        </InfoBar.Content>
    </InfoBar>
</UserControl>
